{
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "dist",
        "moduleResolution": "node",
        "outDir": "dist",
        "target": "es5",
        "module": "es2015",
        "strict": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "src/**/*"
    ]
}
